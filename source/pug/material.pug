include mixins/functions

doctype
html(lang="es")
    head
        include includes/head.pug


    body#page-home.theme-dark.page-header-textura

        header#CursoPresentacion.curso-presentacion.page-header
            .page-textura
                .container

                    include includes/page-home_topbar.pug

                    +pageHeader("Tema", "assets/images/header/header_media.png", "")   

        section#ResultadosAprendizaje.curso-resultados.section.bg-base-light

            .container

                include includes/page-home_resultados.pug  

        section#IndiceTematico.curso-indice-tematico.section

            .container

                h2 Desarrollo de <br>contenidos
                .brand-line-primary

                .row.justify-content-center
                    .col-12.col-sm-10
                        .card.wow.flipInX(data-wow-delay=".4s")
                            .card-body
                                ul.list-group.list-group-flush.list.my-n3.nav-temas
                                    +navTemaItem('1', 'Presentación', 'main.html#page/#tema-1/')
                                    +navTemaItem('2', 'Introducción a la toma de muestras de agua y suelo', 'main.html#page/#tema-2/')
                                    +navTemaItem('3', 'Pasos y normativa de la toma de muestras', 'main.html#page/#tema-3/')
                                    +navTemaItem('4', 'Conceptos básicos de unidades de medida', 'main.html#page/#tema-4/')
                                    +navTemaItem('5', 'Características básicas de rotulado y envase', 'main.html#page/#tema-5/')
                                    +navTemaItem('6', 'Capacitación del personal y seguridad y salud en el trabajo', 'main.html#page/#tema-6/')
                                    +navTemaItem('7', 'Toma de muestras de agua', 'main.html#page/#tema-7/')
                                    +navTemaItem('8', 'Métodos de aforo para determinación de caudales', 'main.html#page/#tema-8/')
                                    +navTemaItem('9', 'Toma de muestra de suelo', 'main.html#page/#tema-9/')
                                    +navTemaItem('10', 'Parámetros in situ para agua', 'main.html#page/#tema-10/')
                                    +navTemaItem('11', 'Parámetros in situ para suelo', 'main.html#page/#tema-11/')
                                    +navTemaItem('12', 'Transporte y recepción de muestras de agua', 'main.html#page/#tema-12/')
                                    +navTemaItem('13', 'Transporte y recepción de muestras de suelo', 'main.html#page/#tema-13/')
                                    +navTemaItem('14', 'Cadena de custodia', 'main.html#page/#tema-14/')

        section#mainContent         
            #tema-1
                include pages/1-tema.pug
